import os
import shutil
import csv

# üîß CONFIGURATION
directory = r"C:\path\to\your\directory"
csv_mapping_file = os.path.join(directory, "folder_mapping.csv")

# üì• Load keyword-folder mappings from the CSV
folder_mapping = {}
with open(csv_mapping_file, newline='', encoding='utf-8') as csvfile:
    reader = csv.DictReader(csvfile)
    for row in reader:
        keyword = row["keyword"].strip().lower()
        folder = row["folder_name"].strip()
        folder_mapping[keyword] = folder

# üì® Supported file types
email_extensions = ['.msg', '.eml']
excel_extensions = ['.xls', '.xlsx', '.xlsm', '.xlsb']

# üìÅ List of actual folders in the directory
subfolders = [f for f in os.listdir(directory) if os.path.isdir(os.path.join(directory, f))]

# üîÅ Loop through files
for filename in os.listdir(directory):
    file_path = os.path.join(directory, filename)

    if os.path.isdir(file_path):
        continue

    _, ext = os.path.splitext(filename)
    ext = ext.lower()

    if ext not in email_extensions + excel_extensions:
        continue

    file_lower = filename.lower()
    matched = False

    for keyword, folder_name in folder_mapping.items():
        if keyword in file_lower:
            target_folder = os.path.join(directory, folder_name)

            if os.path.isdir(target_folder):
                destination = os.path.join(target_folder, filename)
                shutil.move(file_path, destination)
                print(f"‚úÖ Moved: {filename} ‚Üí {folder_name}")
            else:
                print(f"‚ö†Ô∏è Folder not found: {folder_name} for keyword '{keyword}'")
            matched = True
            break

    if not matched:
        print(f"‚ùå No match for file: {filename}")